@using ETicaret.Entity
@model List<Payment>
@{
    ViewBag.Title = "Pay";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>Pay</h2>
<h3>Invoice Information</h3>
<div class="text-danger">
    @TempData["PaymentError"]
</div>

<form action="~/Payment/Pay" method="post">
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="form-control" name="Address"/>
    </div>
    <div class="form-group">
        <div class="text-danger">
            @TempData["NoPaymentId"]
        </div>
        <label> Payment Type</label>
        <select class="form-control" name="PaymentTypeId">
            <option>Select Proper Payment Method</option>
            @foreach (Payment item in Model)
            {
                <option value="@item.PaymentId"> @item.PaymentName</option>
            }
        </select>
    </div>
    <div>
        <button type="submit" class="btn btn-success">PAY</button>
    </div>
</form>
